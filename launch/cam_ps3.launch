<launch>
    <arg name="device" default="/dev/video0" />
    <node name="eyecam_node" pkg="libuvc_camera" type="camera_node" output="screen">
      <remap from="image_raw" to="camera/image_raw"/>
      <remap from="camera_info" to="camera/camera_info"/>
      <remap from="set_camera_info" to="camera/set_camera_info"/>
      <param name="camera_info_url" value="file://$(find ground_truth)/config/camera_ps3.yaml"/>
      <param name="device" value="$(arg device)"/>
      <param name="width" value="640"/>
      <param name="height" value="480"/>
      <param name="format" value="yuyv"/>
      <param name="fps" value="60"/>
      <param name="power_line_frequency" value="50"/>
    </node>
</launch>
